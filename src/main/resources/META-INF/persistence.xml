<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="hospitalPU" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- ==== ENTITY CLASSES ==== -->
        <class>com.hospital.entity.Patient</class>
        <class>com.hospital.entity.MedicalRecord</class>
        <class>com.hospital.entity.Department</class>
        <class>com.hospital.entity.Doctor</class>
        <class>com.hospital.entity.Appointment</class>
        <class>com.hospital.entity.Prescription</class>

        <!-- ==== DATABASE SETTINGS ==== -->
        <properties>

            <property name="jakarta.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver"/>

            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/hospital_erp"/>

            <property name="jakarta.persistence.jdbc.user"
                      value="root"/>

            <property name="jakarta.persistence.jdbc.password"
                      value="1234"/>

            <!-- Hibernate Dialect -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MySQLDialect"/>

            <!-- Auto Create Tables -->
            <property name="hibernate.hbm2ddl.auto"
                      value="update"/>

            <!-- Show SQL in Console -->
            <property name="hibernate.show_sql"
                      value="true"/>

            <property name="hibernate.format_sql"
                      value="true"/>

        </properties>

    </persistence-unit>

</persistence>